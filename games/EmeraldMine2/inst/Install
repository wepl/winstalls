;****************************

(set #sub-dir "")		;sub directory containing data files
(set #readme-file "Readme")	;name of readme file
(set #cleanup "")		;files to delete after install
(set #odname "Emerald Mine II")	;original diskname without :

;****************************

;----------------------------
; Checks if given program is reachable via the path
; if not abort install
; IN:  #program - to check
; OUT: -

(procedure P_chkrun
  (if
    (= 0 (run ("cd SYS:\nWhich %s" #program)))
    ("")
    (abort ("You must install \"%s\" first !\nIt must be accessible via the path.\nYou can find it in the whdload package." #program))
  )
)

(set #program "WHDLoad")
(P_chkrun)

;****************************

(if
  (exists #readme-file)
  (if 
    (= 0 (run ("SYS:Utilities/Multiview %s" #readme-file)))
    ("")
    (run ("SYS:Utilities/More %s" #readme-file))
  )
)

(set @default-dest
  (askdir
    (prompt ("Where should \"%s\" installed ?\nA drawer \"%s\" will automatically created." @app-name @app-name))
    (help @askdir-help)
    (default @default-dest)
    (disk)
  )
)
(set #dest (tackon @default-dest @app-name))
(if
  (exists #dest)
  (
    (set #choice
      (askbool
        (prompt ("\nDirectory \"%s\" already exists.\n Should it be deleted ?" #dest))
        (default 1)
        (choices "Delete" "Skip")
        (help @askbool-help)
      )
    )
    (if
      (= #choice 1)
      (run ("Delete \"%s\" \"%s.info\" All" #dest #dest))
    )
  )
)
(makedir #dest
  (help @makedir-help)
  (infos)
)

;----------------------------
(message ("Please insert your writeprotected Emerald Mine II disk in any drive."))
;(if
;  (= (exists " Traders:" (noreq)) 2)
;  (
;    (set #odname " Traders")
;    (set #paramver "traderse")
;  )
;)
(working ("Please insert your %s disk in any drive." @app-name))
(
  (makedir ("%s/data" #dest))
  (copyfiles
    (help @copyfiles-help)
    (source ("%s:" #odname))
    (dest ("%s/data" #dest))
    (pattern "(devs|game|mus|610data|bdcol|em2|newdef)")
  )
  (makedir ("%s/data/pla" #dest))
  (copyfiles
    (help @copyfiles-help)
    (source ("%s:part1" #odname))
    (dest ("%s/data/pla/" #dest))
    (pattern "(#?)")
  )
  (copyfiles
    (help @copyfiles-help)
    (source ("%s:part2" #odname))
    (dest ("%s/data/pla/" #dest))
    (pattern "(#?)")
  )
  (copyfiles
    (help @copyfiles-help)
    (source ("%s:namex" #odname))
    (dest ("%s/data/" #dest))
    (newname "nam")
  )
  (makedir ("%s/data/his" #dest))
  (set #numloop 0)
  (while (< #numloop 162)
    (
      (copyfiles
        (help @copyfiles-help)
        (source ("%s:hisex" #odname))
        (dest ("%s/data/his/" #dest))
        (newname ("%ld" #numloop))
      )
      (set #numloop (+ #numloop 1))
    )
  )
  (copyfiles
    (help @copyfiles-help)
    (source ("73" @app-name ))
    (dest ("%s/data/pla/" #dest))
  )
)
(if
  (askbool
    (prompt "Do you have created a playfielddisk, and want to install its contents?")
    (help "A playfielddisk contains your game position.")
  )
  ( 
    (message ("Please insert your writeprotected Emerald Mine II playfield disk in any drive."))
    (copyfiles
      (help @copyfiles-help)
      (source "playfielddisk:")
      (dest ("%s/data" #dest))
      (pattern "(his|pla|nam)")
    )
    (if
      (askbool
        (prompt "Should level 73 be replaced with a corrected version? (Select NO if you have modified it.)")
        (help "Level 73 diamond count has been corrected.")
      )
      (
        (copyfiles
          (help @copyfiles-help)
          (source ("73" @app-name ))
          (dest ("%s/data/pla/" #dest))
        )
      )
    )
  )
)
;----------------------------
(copyfiles
  (help @copyfiles-help)
  (source ("%s.slave" @app-name))
  (dest #dest)
)
(copyfiles
  (help @copyfiles-help)
  (source ("EmeraldMine2Game.inf" @app-name ))
  (newname ("EmeraldMine2Game.info" @app-name ))
  (dest #dest)
)
(copyfiles
  (help @copyfiles-help)
  (source ("EmeraldMine2Editor.inf" @app-name ))
  (newname ("EmeraldMine2Editor.info" @app-name ))
  (dest #dest)
)
(if
  (exists #readme-file)
  (
    (copyfiles
      (help @copyfiles-help)
      (source #readme-file)
      (dest #dest)
    )
    (copyfiles
      (help @copyfiles-help)
      (source ("%s.info" #readme-file))
      (dest #dest)
    )
  )
)

(if
  (= #sub-dir "")
  ("")
  (
    (set #dest (tackon #dest #sub-dir))
    (makedir #dest
      (help @makedir-help)
    )
  )
)

;----------------------------

(run ("Delete %s ALL QUIET FORCE" #cleanup))

(exit)
